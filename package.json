{
  "name": "anki-generator",
  "version": "1.0.0",
  "description": "Desktop application for automatic Anki flashcard generation",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "webpack --config webpack.config.js --mode development && electron .",
    "build": "webpack --config webpack.config.js --mode production",
    "start": "electron .",
    "package": "npm run build && electron-packager . AnkiGenerator --platform=win32 --arch=x64 --out=release --overwrite --icon=assets/icon.ico"
  },
  "keywords": [
    "anki",
    "flashcards",
    "electron",
    "react",
    "gemini",
    "elevenlabs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "openai": "^6.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.ankigenerator.app",
    "productName": "AnkiGenerator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
